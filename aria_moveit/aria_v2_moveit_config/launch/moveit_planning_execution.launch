<launch>

  # The planning and execution components of MoveIt! configured to 
  # publish the current configuration of the robot (simulated or real) 
  # and the current state of the world as seen by the planner
  <arg name="use_gui" default="false" />

  <include file="$(find aria_v2_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  # The visualization component of MoveIt!
  <include file="$(find aria_v2_moveit_config)/launch/moveit_rviz.launch" >
    <arg name="rviz_config" value="$(find aria_v2_moveit_config)/launch/moveit.rviz"/>
  </include>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="$(arg use_gui)"/>
    <rosparam param="source_list">[joint_states]</rosparam>
  </node>

</launch>
